# ============================================================
# Shared project example environment
# Copy relevant sections into backend/.env and frontend/.env.local
# ============================================================

# Backend
HOST=0.0.0.0
PORT=3001
KIRU_DATA_ROOT=./data
ALLOWED_ORIGINS=http://localhost:3000

# LLM provider: local | openai | anthropic
LLM_PROVIDER=openai

# Local vLLM (when LLM_PROVIDER=local)
VLLM_BASE_URL=http://localhost:8000
VLLM_MODEL=Qwen/Qwen3-30B-A3B-Instruct-2507
VLLM_API_KEY=

# OpenAI
OPENAI_BASE_URL=https://api.openai.com
OPENAI_MODEL=gpt-4o-mini
OPENAI_API_KEY=sk-...
LLM_MAX_TOKENS_VOICE=128
LLM_MAX_TOKENS_ANALYSIS=512

# Anthropic / Claude
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_API_KEY=sk-ant-...

# Exa Search
EXA_SEARCH_ENABLED=false
EXA_API_KEY=exa-...
EXA_SEARCH_URL=https://api.exa.ai/search
EXA_SEARCH_RESULTS_LIMIT=5

# Perplexity Sonar
PERPLEXITY_API_KEY=pplx-...
PERPLEXITY_BASE_URL=https://api.perplexity.ai
PERPLEXITY_MODEL=sonar
PERPLEXITY_SEARCH_ENABLED=false

# Upstash Redis / caching (optional)
UPSTASH_REDIS_URL=
# Use REDIS_URL for non-Upstash setups if preferred
REDIS_URL=
CACHE_ENABLED=false
CACHE_DEFAULT_TTL_SECONDS=300
CACHE_RESEARCH_TTL_SECONDS=300
CACHE_TASK_TTL_SECONDS=120
CACHE_ANALYSIS_TTL_SECONDS=300
CACHE_KEY_PREFIX=kiru

# Deepgram
DEEPGRAM_API_KEY=
DEEPGRAM_VOICE_AGENT_ENABLED=true
DEEPGRAM_VOICE_AGENT_WS_URL=wss://agent.deepgram.com/v1/agent/converse
DEEPGRAM_VOICE_AGENT_LISTEN_MODEL=nova-3
DEEPGRAM_VOICE_AGENT_SPEAK_MODEL=aura-2-thalia-en
DEEPGRAM_VOICE_AGENT_THINK_PROVIDER=openai
DEEPGRAM_VOICE_AGENT_THINK_MODEL=gpt-4o-mini
DEEPGRAM_VOICE_AGENT_THINK_TEMPERATURE=0.7
DEEPGRAM_VOICE_AGENT_THINK_ENDPOINT_URL=
DEEPGRAM_VOICE_AGENT_THINK_ENDPOINT_HEADERS={}

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_WEBHOOK_HOST=https://your-public-url

# Supabase (optional call/session sync)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_CHAT_SESSIONS_TABLE=chat_sessions
SUPABASE_CALLS_TABLE=calls
SUPABASE_CALL_ARTIFACTS_TABLE=call_artifacts
SUPABASE_CHAT_SESSIONS_ENABLED=auto
SUPABASE_CALLS_ENABLED=auto
SUPABASE_CALL_ARTIFACTS_ENABLED=auto
SUPABASE_CALL_ARTIFACT_MAX_AUDIO_BYTES=6291456
SUPABASE_VERBOSE_SYNC_LOGGING=true
AUTO_IVR_NAVIGATION_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_NOISY_EVENTS_EVERY_N=120

# Frontend
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001
NEXT_PUBLIC_BACKEND_WS_URL=ws://localhost:3001
